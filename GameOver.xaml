        <Image Source="img\GameOver.jpg" Height="672" Width="496"/>
        <Rectangle Name="over" Fill="White" Height="672" Width="496"/>
        <Button x:Name="restart" Content="restart" Click="restart_Click" Canvas.Left="224" Canvas.Top="571" Height="38" Width="50"    />
        <TextBlock x:Name="countTB" Canvas.Left="9" Canvas.Top="571" Text="" TextWrapping="Wrap" Height="38" Width="215" Background="#FF1A357C"/>
        <TextBlock x:Name="killTB" Canvas.Left="274" Canvas.Top="571" Text="" TextWrapping="Wrap" Height="38" Width="212" Background="#FF1A357C"/>

    </Canvas>

</Window>
